<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="styles/style.css">
    <title>Document</title>
</head>
<body>
    
    <nav class="header"><h2 class="title"> <i class="fa-solid fa-key"></i> keeper app</h2></nav>
    <section class="base">
        <div class="tArea">
            <form action="/add" method="post">
                <input type="text" name="inputF" placeholder="title" required/>
                <textarea name="texta" id="" cols="30" rows="20" placeholder="content" required></textarea>
                <button type="submit" class="addb">Submit</button>
            </form>
        </div>
    </section>
    <section class="notes">
        <% for (let item of ItemLists) {%>
            <div class="note">
                <h2 class="iTitle"><%= item.title %></h2>
                <p class="iContent"><%= item.content%></p>
                
                <!-- <h4 class="Dbutton">delete</h4> -->
                <form class="deleteF" action="/delete" method="post">
                    <button onchange="this.form.submit()" name="deleteItemId" value="<%= item.id %>"></button>
                </form>
            </div>
        <% } %>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html> 